<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitStart"
        android:src="@drawable/login_bg"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="143dp"
        android:text="登录后可以使用更多功能"
        android:layout_alignBottom="@+id/imageView6"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:id="@+id/linearLayout2">

        <Button
            android:id="@+id/btn_qq_login_alert"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorLoginAlertButton"
            android:text="QQ快捷登录"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorUserNameListView"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="手机登录"
        android:id="@+id/tv_phone_login_alert"
        android:layout_alignBottom="@+id/imageView6"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorUserNameListView"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="手机注册"
        android:id="@+id/tv_phone_register_alert"
        android:layout_alignTop="@+id/tv_phone_login_alert"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>